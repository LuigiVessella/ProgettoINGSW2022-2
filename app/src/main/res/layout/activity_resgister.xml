<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_list"
    tools:context=".Activities.ResgisterActivity">

    <Button
        android:id="@+id/okButton"
        android:layout_width="161dp"
        android:layout_height="50dp"
        android:layout_gravity="center|fill_vertical"
        android:backgroundTint="@drawable/button_color_scheme"
        android:drawableEnd="@drawable/icona_registra"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/registerBtn"
        android:textColor="@color/bianco"
        app:cornerRadius="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.77" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="389dp"
        android:layout_height="265dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/emailLoginText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/register_email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/grigio_scuro"
                android:textColorHint="@color/grigio_chiaro" />

            <EditText
                android:id="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:ems="10"
                android:enabled="true"
                android:fontFamily="@font/roboto"
                android:hint="@string/register_pass"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingStart="5dp"
                android:textColor="@color/grigio_scuro"
                android:textColorHint="@color/grigio_chiaro" />

            <EditText
                android:id="@+id/partitaIvaText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="Partita IVA"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:textColor="@color/grigio_scuro"
                android:textColorHint="@color/grigio_chiaro" />

            <EditText
                android:id="@+id/firstNameText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/register_name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingStart="5dp"
                android:textColor="@color/grigio_scuro"
                android:textColorHint="@color/grigio_chiaro" />

            <EditText
                android:id="@+id/secondNameText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="@string/register_surname"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingStart="5dp"
                android:textColor="@color/grigio_scuro"
                android:textColorHint="@color/grigio_chiaro" />

            <EditText
                android:id="@+id/codiceFiscaleText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_input"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Codice Fiscale"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:textColor="@color/grigio_scuro"
                android:textColorHint="@color/grigio_chiaro" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/titleReg"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="@string/register_title"
        android:textAlignment="center"
        android:textColor="@color/grigio_scuro"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672" />

    <ImageView
        android:id="@+id/LogoReg"
        android:layout_width="168dp"
        android:layout_height="127dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logobiagio"
        app:layout_constraintBottom_toTopOf="@+id/titleReg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="364dp" />

</androidx.constraintlayout.widget.ConstraintLayout>