<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_1_con_patina"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/waiterLogoBiagioTest"
        android:layout_width="129dp"
        android:layout_height="130dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/logobiagio"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/waiterTestTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                tools:ignore="UselessParent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/waiterFirstNameText"
                        android:layout_width="50dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/waiterTextInputEditTextLayoutName"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_input"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/nameRequired"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHighlight="#42260A"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/waiterSecondNameText"
                        android:layout_width="50dp"
                        android:layout_height="55dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/waiterTextInputEditTextLayoutSurname"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_input"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/SurnameRequired"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHighlight="#42260A"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color" />

                    </com.google.android.material.textfield.TextInputLayout>

                </TableRow>

                <TableRow
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/waiterEmailText"
                        android:layout_width="118dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/waiterTextInputEditTextLayoutEmail"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_input"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/EmailRequired"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHighlight="#42260A"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color" />

                    </com.google.android.material.textfield.TextInputLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <Spinner
                        android:id="@+id/ruoloSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/custom_input"
                        android:entries="@array/spinner_items"
                        android:textColor="@color/grigio_scuro" />

                </TableRow>

                <TableRow
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/waiterCodiceFiscaleText"
                        android:layout_width="50dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/waiterTextInputEditTextLayoutCodiceFiscale"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_input"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/CodiceFiscaleRequired"
                            android:inputType="textCapCharacters"
                            android:singleLine="true"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHighlight="#42260A"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color" />

                    </com.google.android.material.textfield.TextInputLayout>

                </TableRow>

                <TableRow
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:paddingBottom="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/waiterPasswordText"
                        android:layout_width="118dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditTextLayoutwaiter"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/custom_input"
                            android:ems="8"
                            android:hint="@string/PasswordRequired"
                            android:inputType="textPassword"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/waiterOkButton"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:contentDescription="registra cameriere"
        android:backgroundTint="@drawable/button_color_scheme"
        android:drawableEnd="@drawable/icona_login"
        android:fontFamily="@font/roboto"
        android:text="@string/registerBtn"
        android:textColor="@color/bianco"
        app:cornerRadius="40sp"
        tools:ignore="HardcodedText" />

</LinearLayout>