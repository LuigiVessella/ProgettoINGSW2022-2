<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_1_con_patina"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/waiterLogoBiagioTest"
        android:layout_width="129dp"
        android:layout_height="130dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        app:srcCompat="@drawable/logobiagio" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp">

            <TableLayout
                android:id="@+id/waiterTestTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:baselineAligned="false">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/waiterFirstNameText"
                            android:layout_width="160dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center"
                            android:paddingLeft="15dp"
                            android:background="@drawable/custom_input"
                            android:ems="8"
                            android:hint="@string/register_name"
                            android:inputType="textPersonName"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/waiterSecondNameText"
                            android:layout_width="160dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:paddingLeft="15dp"
                            android:background="@drawable/custom_input"
                            android:ems="8"
                            android:hint="@string/register_surname"
                            android:inputType="text"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/waiterEmailLoginText"
                        android:layout_width="300dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="8"
                        android:hint="@string/register_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <Spinner
                        android:id="@+id/ruoloSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_input"
                        android:entries="@array/spinner_items"
                        android:textColor="@color/grigio_scuro" />

                </TableRow>

                <TableRow
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/waiterCodiceFiscaleText"
                        android:layout_width="350dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="8"
                        android:hint="Codice Fiscale*"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"/>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="30dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/waiterPasswordText"
                        android:layout_width="118dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditTextLayoutwaiter"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/custom_input"
                            android:ems="8"
                            android:hint="@string/register_pass"
                            android:inputType="textPassword"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </TableRow>
            </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/waiterOkButton"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:contentDescription="registra cameriere"
        android:backgroundTint="@drawable/button_color_scheme"
        android:drawableEnd="@drawable/icona_login"
        android:fontFamily="@font/roboto"
        android:text="@string/registerBtn"
        android:textColor="@color/bianco"
        app:cornerRadius="40sp" />

</LinearLayout>