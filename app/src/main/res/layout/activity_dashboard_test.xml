<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sfondo_2_con_patina">

        <LinearLayout
            android:id="@+id/linearLayoutAdminTop"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/logoBiagioTestAdmin"
                android:layout_width="129dp"
                android:layout_height="130dp"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                app:srcCompat="@drawable/logobiagio" />

        </LinearLayout>

        <Button
            android:id="@+id/modifyProfileBtn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="72dp"
            android:backgroundTint="@drawable/button_color_scheme"
            android:fontFamily="@font/roboto_light"
            android:text="@string/profileBtn"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.599" />

        <Button
            android:id="@+id/modifyRestaurantBtn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginBottom="200dp"
            android:backgroundTint="@drawable/button_color_scheme"
            android:fontFamily="@font/roboto_light"
            android:text="@string/showStats"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutAdminTop"
            app:layout_constraintVertical_bias="0.817" />

        <ImageView
            android:id="@+id/background_shape_waiter"
            android:layout_width="match_parent"
            android:layout_height="544dp"
            android:src="@drawable/frame_shape_2"
            android:visibility="visible"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="57dp" />

        <Button
            android:id="@+id/visBtn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:backgroundTint="@drawable/button_color_scheme"
            android:fontFamily="@font/roboto_light"
            android:text="@string/modifyRestaurantBtn"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutAdminTop"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutAdminTop"
            app:layout_constraintVertical_bias="0.228" />

        <Button
            android:id="@+id/addRestaurantBtn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="112dp"
            android:backgroundTint="@drawable/button_color_scheme"
            android:fontFamily="@font/roboto_light"
            android:text="@string/addRestaurantBtn"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.247"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutAdminTop" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>