<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_list"
    android:id="@+id/mainLayout"
    tools:context=".Activities.MainActivity">

    <ImageView
        android:id="@+id/background_shape"
        android:layout_width="match_parent"
        android:layout_height="663dp"
        android:elevation="1dp"
        android:rotation="0"
        android:src="@drawable/background_shape"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/registerBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#EFC88B"
        android:drawableEnd="@drawable/icona_registra"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/registerBtn"
        android:textColor="@color/bianco"
        android:translationY="-40dp"
        android:elevation="10dp"
        app:cornerRadius="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupQuestion" />

    <TextView
        android:id="@+id/signupQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/signupQuestion"
        android:textColor="@color/grigio_scuro"
        android:textSize="20sp"
        android:translationY="-40dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="140dp"
        android:layout_height="105dp"
        android:contentDescription="@string/contentDescriptionMainLogo"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119"
        app:srcCompat="@drawable/logobiagio"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/petit_formal_script"
        android:text="@string/app_title"
        android:textColor="@color/grigio_scuro"
        android:textSize="28sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:backgroundTint="#EFC88B"
        android:drawableEnd="@drawable/icona_login"
        android:text="@string/loginBtn"
        android:textColor="@color/bianco"
        android:translationY="-40dp"
        android:elevation="10dp"
        app:cornerRadius="40sp"
        app:iconTint="@color/bianco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signedQuestion"
        app:layout_constraintVertical_bias="0.0"></Button>

    <TextView
        android:id="@+id/signedQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/grigio_scuro"
        android:gravity="center"
        android:text="@string/signedQuestion"
        android:textSize="20sp"
        android:translationY="-40dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="#776155"
            app:navigationIcon="@drawable/baseline_menu_24" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:backgroundTint="#EFC88B"
            android:src="@drawable/baseline_add_24"
            app:layout_anchor="@id/bottom_app_bar" />



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>