<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout_not"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_2_con_patina"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcomeOrderStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textColor="@color/bianco"
        android:textSize="26dp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto"
        android:text="Benvenuto in cucina! Ordini in arrivo:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_table_rw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationAddettoCucina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/marrone_terziario"
        app:itemIconTint="@color/bianco"
        app:itemTextColor="@color/bianco"
        app:menu="@menu/navigationbar_menu" />
</LinearLayout>