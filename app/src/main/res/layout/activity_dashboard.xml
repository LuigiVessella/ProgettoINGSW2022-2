<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_1_con_patina"
    tools:context=".Activities.AdminDashboardActivity">

    <Button
        android:id="@+id/modifyProfileBtn2"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@drawable/button_color_scheme"
        android:fontFamily="@font/roboto_light"
        android:text="@string/profileBtn"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534" />

    <Button
        android:id="@+id/modifyRestaurantBtn2"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@drawable/button_color_scheme"
        android:fontFamily="@font/roboto_light"
        android:text="@string/showStats"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534" />

    <Button
        android:id="@+id/addRestaurantBtn2"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@drawable/button_color_scheme"
        android:fontFamily="@font/roboto_light"
        android:text="@string/addRestaurantBtn"
        android:textSize="14dp"
        android:textStyle="bold"
        app:cornerRadius="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.344" />

    <Button
        android:id="@+id/visBtn2"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@drawable/button_color_scheme"
        android:fontFamily="@font/roboto_light"
        android:text="@string/modifyRestaurantBtn"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutAdminTop"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346" />

    <LinearLayout
        android:id="@+id/linearLayoutAdminTop"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043">

        <ImageView
            android:id="@+id/logoBiagioTestAdmin"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_gravity="left"
            android:layout_marginLeft="12dp"
            app:srcCompat="@drawable/logobiagio" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="123dp"
        android:layout_height="35dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/AdminResturant"
        android:textColor="@color/bianco"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewRistoranti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifyProfileBtn2" />

    <ScrollView
        android:id="@+id/scrollViewRistoranti"
        android:layout_width="361dp"
        android:layout_height="184dp"
        android:background="@drawable/dialog_border_view"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935">

        <LinearLayout
            android:id="@+id/linearLayoutScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>