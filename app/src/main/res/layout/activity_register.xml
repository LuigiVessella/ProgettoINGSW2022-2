<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_1_con_patina"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutRegisterTop"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/logoBiagioTest"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_gravity="left"
            android:layout_marginLeft="12dp"
            app:srcCompat="@drawable/logobiagio" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp">

            <TableLayout
                android:id="@+id/testTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/firstNameText"
                            android:layout_width="180dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="30dp"
                            android:paddingLeft="15dp"
                            android:background="@drawable/custom_input"
                            android:ems="8"
                            android:hint="@string/register_name"
                            android:inputType="textPersonName"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/secondNameText"
                            android:layout_width="160dp"
                            android:layout_height="55dp"
                            android:paddingLeft="15dp"
                            android:background="@drawable/custom_input"
                            android:ems="8"
                            android:hint="@string/register_surname"
                            android:inputType="text"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailRegisterText"
                        android:layout_width="300dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="8"
                        android:hint="@string/register_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/partitaIvaText"
                        android:layout_width="350dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="8"
                        android:hint="Partita IVA*"
                        android:inputType="text"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/codiceFiscaleText"
                        android:layout_width="350dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="15dp"
                        android:background="@drawable/custom_input"
                        android:ems="8"
                        android:hint="Codice Fiscale*"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordText"
                        android:layout_width="118dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:passwordToggleEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/custom_input"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="@string/register_pass"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="@color/grigio_scuro"
                            android:textColorHighlight="#42260A"
                            android:textColorHint="@color/grigio_chiaro"
                            android:textCursorDrawable="@drawable/cursor_color" />
                    </com.google.android.material.textfield.TextInputLayout>
                </TableRow>
            </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/welcomeRegisterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/welcome"
        android:textSize="30dp" />

    <Button
        android:id="@+id/okButtonRegister"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@drawable/button_color_scheme"
        android:drawableEnd="@drawable/icona_login"
        android:fontFamily="@font/roboto"
        android:text="@string/registerBtn"
        android:textColor="@color/bianco"
        app:cornerRadius="40sp" />


</LinearLayout>