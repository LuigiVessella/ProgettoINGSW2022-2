<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_1_con_patina"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutMenuTop"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/logoBiagioTestMenu"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/logobiagio"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutMenuTop"
        app:layout_constraintVertical_bias="0.05"
        tools:layout_editor_absoluteX="0dp">

        <TableLayout
            android:id="@+id/testTableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            tools:ignore="UselessParent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstNameText"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextLayoutName"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/nameRequired"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHighlight="#42260A"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/secondNameText"
                    android:layout_width="50dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextLayoutSurname"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/SurnameRequired"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHighlight="#42260A"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </com.google.android.material.textfield.TextInputLayout>
            </TableRow>

            <TableRow
                android:layout_width="221dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailRegisterText"
                    android:layout_width="118dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextLayoutEmail"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/EmailRequired"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHighlight="#42260A"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <TableRow
                android:layout_width="221dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/partitaIvaText"
                    android:layout_width="118dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextLayoutPartitaIva"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/PartitaIVARequired"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHighlight="#42260A"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <TableRow
                android:layout_width="221dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/codiceFiscaleText"
                    android:layout_width="118dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextLayoutCodiceFiscale"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/CodiceFiscaleRequired"
                        android:inputType="textCapCharacters"
                        android:singleLine="true"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHighlight="#42260A"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingBottom="20dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditTextLayoutPass"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/custom_input"
                        android:ems="10"
                        android:fontFamily="@font/roboto"
                        android:hint="@string/PasswordRequired"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/grigio_scuro"
                        android:textColorHighlight="#42260A"
                        android:textColorHint="@color/grigio_chiaro"
                        android:textCursorDrawable="@drawable/cursor_color" />

                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/welcomeRegisterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/welcome"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/okButtonRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.66"
        tools:ignore="SpUsage" />

    <Button
        android:id="@+id/okButtonRegister"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="@drawable/button_color_scheme"
        android:drawableEnd="@drawable/icona_login"
        android:fontFamily="@font/roboto"
        android:text="@string/registerBtn"
        android:textColor="@color/bianco"
        app:cornerRadius="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867" />


</androidx.constraintlayout.widget.ConstraintLayout>